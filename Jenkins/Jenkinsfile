pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Build and Run Containers') {
            steps {
                script {
                    // Navigate to the Task3 folder and run Docker Compose
                    dir('Task3') {
                        sh 'docker-compose up -d --build'
                    }
                }
            }
        }
    }
    post {
        always {
            script {
                // Navigate to the Task3 folder and clean up containers after the pipeline completes
                dir('Task3') {
                    sh 'docker-compose down'
                }
            }
        }
    }
}
